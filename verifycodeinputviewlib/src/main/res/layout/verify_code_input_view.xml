<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/inputGrid"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.practice.verifycodeinputviewlib.VerifyCodeEditText
                android:id="@+id/vc_et0"
                style="@style/VerifyCodeInputViewEditTextStyle"
                 />

            <View style="@style/VerifyCodeInputViewEditTextUnderlineStyle" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.practice.verifycodeinputviewlib.VerifyCodeEditText
                android:id="@+id/vc_et1"
                style="@style/VerifyCodeInputViewEditTextStyle"
                 />

            <View style="@style/VerifyCodeInputViewEditTextUnderlineStyle" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.practice.verifycodeinputviewlib.VerifyCodeEditText
                android:id="@+id/vc_et2"
                style="@style/VerifyCodeInputViewEditTextStyle"
                 />

            <View style="@style/VerifyCodeInputViewEditTextUnderlineStyle" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.practice.verifycodeinputviewlib.VerifyCodeEditText
                android:id="@+id/vc_et3"
                style="@style/VerifyCodeInputViewEditTextStyle"
                 />

            <View style="@style/VerifyCodeInputViewEditTextUnderlineStyle" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.practice.verifycodeinputviewlib.VerifyCodeEditText
                android:id="@+id/vc_et4"
                style="@style/VerifyCodeInputViewEditTextStyle"
                 />

            <View style="@style/VerifyCodeInputViewEditTextUnderlineStyle" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.practice.verifycodeinputviewlib.VerifyCodeEditText
                android:id="@+id/vc_et5"
                style="@style/VerifyCodeInputViewEditTextStyle"
                 />

            <View style="@style/VerifyCodeInputViewEditTextUnderlineStyle" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/vc_emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inputGrid"
        android:layout_alignLeft="@+id/inputGrid"
        android:layout_alignRight="@+id/inputGrid"
        android:layout_alignTop="@+id/inputGrid"
        android:gravity="center_vertical|left"
        android:text="请输入验证码"
        android:textSize="20sp" />

</RelativeLayout>